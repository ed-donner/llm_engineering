# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-password
DB_NAME=andela_ai_engineering_bootcamp

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenAI API Key
OPENAI_API_KEY=your_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Processing Configuration
CHUNK_SIZE_MS=200
VAD_AGGRESSIVENESS=2
WHISPER_MODEL=base
LLM_MODEL=gpt-4-turbo-preview

# Redis Stream Configuration
REDIS_STREAM_NAME=audio_chunks
REDIS_LLM_STREAM_NAME=transcript_chunks
REDIS_CONSUMER_GROUP=audio_processors
REDIS_CONSUMER_NAME=processor_1

# Audio Processing Configuration
ENABLE_DIARIZATION=false
HF_TOKEN=your_huggingface_token_here

# Whisper Model Options: tiny, base, small, medium, large, large-v2, large-v3
WHISPER_MODEL=base

# LLM Processing Configuration
LLM_MODEL=gpt-4-turbo-preview
LLM_CONTEXT_CHUNKS=10
LLM_ANALYSIS_INTERVAL=5
REDIS_LLM_CONSUMER_GROUP=llm_processors

# Error Handling & Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=60.0

# Audio Storage (for debugging/reprocessing)
ENABLE_AUDIO_STORAGE=false
AUDIO_STORAGE_PATH=./audio_storage

# LLM Batch Processing
LLM_BATCH_SIZE=20
LLM_BATCH_TIMEOUT=30

# Horizontal Scaling
ENABLE_WORKER_REGISTRY=false
WORKER_ID=auto
WORKER_CAPACITY=10
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TTL=60
