1.  #include <iostream>
2.  #include <vector>
3.  #include <random>
4.  #include <chrono>
5.  #include <iomanip>
6.  
7.  // Linear Congruential Generator (LCG)
8.  std::mt19937_64 lcg(42);
9.  
10. // Maximum Subarray Sum
11. long long max_subarray_sum(int n, long long seed, int min_val, int max_val) {
12.     std::uniform_int_distribution<long long> dist(min_val, max_val);
13.     std::vector<long long> random_numbers(n);
14.     for (int i = 0; i < n; i++) {
15.         random_numbers[i] = dist(lcg);
16.     }
17.     long long max_sum = std::numeric_limits<long long>::min();
18.     for (int i = 0; i < n; i++) {
19.         long long current_sum = 0;
20.         for (int j = i; j < n; j++) {
21.             current_sum += random_numbers[j];
22.             if (current_sum > max_sum) {
23.                 max_sum = current_sum;
24.             }
25.         }
26.     }
27.     return max_sum;
28. }
29.  
30. // Total Maximum Subarray Sum
31. long long total_max_subarray_sum(int n, long long initial_seed, int min_val, int max_val) {
32.     long long total_sum = 0;
33.     std::uniform_int_distribution<long long> dist(min_val, max_val);
34.     for (int i = 0; i < 20; i++) {
35.         long long seed = dist(lcg);
36.         total_sum += max_subarray_sum(n, seed, min_val, max_val);
37.     }
38.     return total_sum;
39. }
40.  
41. int main() {
42.     // Parameters
43.     int n = 10000;         // Number of random numbers
44.     long long initial_seed = 42; // Initial seed for the LCG
45.     int min_val = -10;     // Minimum value of random numbers
46.     int max_val = 10;      // Maximum value of random numbers
47.  
48.     // Timing the function
49.     auto start_time = std::chrono::high_resolution_clock::now();
50.     long long result = total_max_subarray_sum(n, initial_seed, min_val, max_val);
51.     auto end_time = std::chrono::high_resolution_clock::now();
52.  
53.     // Printing the result
54.     std::cout << "Total Maximum Subarray Sum (20 runs): " << result << std::endl;
55.     std::cout << "Execution Time: " << std::chrono::duration_cast<std::chrono::microseconds>(end_time - start_time).count() / 1000000.0 << " seconds" << std::endl;
56.  
57.     return 0;
58. }<step>